<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tlf.creator.dao.curriculum.task.AccountTaskMapper" >

  <resultMap id="BaseResultMap" type="com.tlf.creator.vo.TaskVO" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="created_at" property="createdAt" jdbcType="TIMESTAMP" />
    <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP" />
    <result column="deleted_at" property="deletedAt" jdbcType="TIMESTAMP" />
    <result column="account_id" property="accountId" jdbcType="VARCHAR" />
    <result column="task_id" property="taskId" jdbcType="VARCHAR" />
    <result column="statu" property="statu" jdbcType="VARCHAR" />
    <result column="finish_time" property="finishTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <sql id="Base_Column_List" >
    id, created_at, updated_at, deleted_at, account_id, task_id, statu, finish_time
  </sql>



  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from account_task
    where id = #{id,jdbcType=VARCHAR}
  </select>

  <update id="deleteByPrimaryKey" parameterType="java.lang.String" >
    update account_task set deleted_at = now()
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <insert id="bulkInsert" parameterType="com.tlf.creator.entity.curriculum.task.AccountTask" >
    insert into account_task (id, created_at, updated_at, deleted_at, account_id, task_id, statu, finish_time)
    values
    <foreach collection="list" item="accountTask" index="index" separator=",">
      (
      #{accountTask.id,jdbcType=VARCHAR},now(), now(),null,
      #{accountTask.accountId,jdbcType=VARCHAR}, #{accountTask.taskId,jdbcType=VARCHAR},
      #{accountTask.statu,jdbcType=VARCHAR}, #{accountTask.finishTime,jdbcType=TIMESTAMP}
      )
    </foreach>
  </insert>

  <update id="updateByStatusOrFinish" parameterType="com.tlf.creator.entity.curriculum.task.AccountTask" >
    update account_task
    <set >
      <if test="statu!=null">
        statu = #{statu,jdbcType=VARCHAR},
      </if>
      <if test="finishTime!=null">
        finish_time = #{finishTime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>

</mapper>